<h3 class="text-center">Recipes</h3>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Time</th>
      <th>Difficulty</th>
      <th>Type</th>
      <th>Preference</th>
      <th>Cuisine</th>
      <th>Ingredients</th>
      <!-- <th>Procedure</th> -->
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= recipe.difficulty_level %></td>
        <td><%= recipe.food_type.name %></td>
        <td><%= recipe.food_preference.name %></td>
        <td><%= recipe.cuisine.name %></td>
        <td><%= recipe.ingredients %></td>
        <!-- <td><%= recipe.procedure %></td> -->
        <td><%= link_to 'Show', recipe, class: 'button tiny radius success' %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'button tiny radius success' %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny radius alert' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path, class: 'button small radius' %>
